<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/detail_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/food_placeholder"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/detail_food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nasi Lemak"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/detail_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Petaling Jaya"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/detail_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 packs available"
                    android:background="@drawable/corner_radius"
                    android:padding="8dp"/>

                <TextView
                    android:id="@+id/detail_requested_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(0 requested)"
                    android:background="@drawable/corner_radius"
                    android:padding="8dp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Here is the full long description..."
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donor Details"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/detail_donor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¤ Loading Name..."
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/detail_donor_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“ž Loading Contact..."
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/donor_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â­ Loading Rating..."
                android:textSize="16sp"
                android:layout_marginTop="2dp"/>

            <Button
                android:id="@+id/btn_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:backgroundTint="#FF9B62"
                android:text="Request Food"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_cancel_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FF5252"
                android:text="Cancel Request"
                android:textColor="@color/white"
                android:visibility="gone"
                android:enabled="false" />

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:backgroundTint="#FF9B62"
                android:contentDescription="Go Back"
                android:elevation="6dp"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/outline_arrow_back_24" />

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>