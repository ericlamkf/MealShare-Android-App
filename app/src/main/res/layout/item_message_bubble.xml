<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/layout_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@drawable/bg_bubble_left"
        android:padding="12dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_msg_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Is this still available?"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/bg_bubble_right"
        android:padding="12dp"
        android:visibility="gone"> <TextView
        android:id="@+id/tv_msg_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes, come pick it up!"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>