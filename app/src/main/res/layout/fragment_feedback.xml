<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/inapp_gradient"
    tools:context=".FeedbackFragment">

    <TextView
        android:id="@+id/tvFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Feedback"
        android:textSize="35sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.107" />

    <TextView
        android:id="@+id/tvRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="-5dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Rate"
        android:textSize="27sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFeedback" />

    <ImageView
        android:id="@+id/ivRateBackground"
        android:layout_width="271dp"
        android:layout_height="65dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="132dp"
        android:src="@drawable/rating_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="239dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:background="#FEAA3E"
        android:numStars="5"
        android:progressTint="#FFD700"
        android:stepSize="1"
        app:layout_constraintEnd_toEndOf="@+id/ivRateBackground"
        app:layout_constraintTop_toTopOf="@+id/ivRateBackground" />

    <TextView
        android:id="@+id/ivGiveFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="264dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Give them some feedback ❤️"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="136dp"
        android:layout_height="51dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="244dp"
        android:backgroundTint="#FEAA3E"
        android:fontFamily="@font/poppins_bold"
        android:text="Submit"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/feedback_box"
        app:layout_constraintTop_toBottomOf="@+id/feedback_box" />

    <EditText
        android:id="@+id/feedback_box"
        android:layout_width="391dp"
        android:layout_height="351dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/feedback_rectangle"
        android:gravity="top|start"
        android:hint="Type something here…"
        android:inputType="textMultiLine"
        android:overScrollMode="always"
        android:padding="20dp"
        android:scrollbars="vertical"
        android:textColor="#6E6258"
        app:layout_constraintStart_toStartOf="@+id/ivGiveFeedback"
        app:layout_constraintTop_toBottomOf="@+id/ivGiveFeedback" />


</androidx.constraintlayout.widget.ConstraintLayout>
